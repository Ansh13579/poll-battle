{
  "name": "poll-battle",
  "version": "1.0.0",
  "description": "Real-time live poll application with voting battles",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "build": "cd client && npm install && npm run build",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "dev-server": "cd server && npm run dev",
    "dev-client": "cd client && npm start",
    "heroku-postbuild": "npm run install-server && npm run install-client && npm run build",
    "deploy": "gh-pages -d client/build"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": ["poll", "realtime", "socketio", "react", "voting", "battle"],
  "author": "Ansh13579",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ansh13579/poll-battle.git"
  },
  "bugs": {
    "url": "https://github.com/Ansh13579/poll-battle/issues"
  },
  "homepage": "https://ansh13579.github.io/poll-battle"
}